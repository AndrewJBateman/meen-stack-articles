<%- include ("partials/header", {title: "Edit"}) %>
<body>
	<%- include('partials/navbar', {page_name: "edit"}) %>
	<div class="container py-3">
		<div class="card rounded" style="max-width: 1000px">
			<div class="card-header bg-light p-3">
				<h5 class="card-title text-center mb-0" style="color: #0d47a1">
					Edit Article
				</h5>
			</div>
			<div class="card-body p-3">
				<form action="/articles/<%= article.id %>?_method=PUT" method="POST" id="editForm">
					<%- include ("partials/fields", { maxTitleLength, maxMarkdownLength,
					maxSummaryLength }) %>
					<div class="card-footer d-flex justify-content-around">
						<div>
							<a href="/" class="btn btn-sm btn-danger" style="width: 65px;" onclick="return confirm('Are you sure you want to cancel? - you will lose your edits')"
								><span style="color: fff; font-size: 16px;">Cancel</span></a
							>
						</div>
						<div>
							<button
								type="submit"
								class="btn btn-sm btn-dark"
								style="width: 65px; font-size: 16px;"
							>Save
							</button>
						</div>
					</div>
				</form>
			</div>
	</div>
</body>

<%- include ("partials/footer") %>
