<%- include ("partials/header", {title: "Contact"}) %>
<body>
	<%- include('partials/navbar', {page_name: "contact"}) %>

	<div class="container pt-3">
		<div class="card rounded">
			<div class="card-header bg-light p-3">
				<img
					class="header-image float-left"
					style="width: 60px; height: 60px; background-size: cover"
					src="<%= user.avatar_url %>"
					alt="Github user profile photo"
				/>
				<h5 class="card-title mb-0" style="color: #0d47a1">
					<img
						src="/images/person-24px.svg"
						alt="date article was created"
						class="ml-2 mr-1 my-1"
					/><%= user.name %>
				</h5>
				<p class="indent-text mb-0" style="color: #0d47a1">
					<img
						src="/images/explore-24px.svg"
						alt="date article was created"
						class="ml-2 mr-1 my-1"
					/><%= user.location %>
				</p>
			</div>
			<div class="card-body pb-0">
				<p class="">
					<img
						src="/images/description-24px.svg"
						alt="date article was created"
						class="mr-1 mb-1"
					/>Bio:<span class="font-italic font-weight-bold pr-2" style="color: #0d47a1;"><%= user.bio %></span
				</p>
				<p >
					<img
						src="/images/github-24px.svg"
						alt="date article was created"
						class="mr-1 mb-1"
					/>Repos: <span class="font-weight-bold pr-2" style="color: #0d47a1;"><%=
						user.public_repos %></span>
				</p>
			</div>
			<div class="d-flex justify-content-around bg-light">
				<div class="p-3">
					<a
						href="<%= user.html_url %>"
						target="_blank"
						rel="noopener noreferrer"
						class="btn btn-outline-dark"
						style="width: 80px;"
						><img
						src="/images/github-24px.svg"
						alt="date article was created"
						class="mr-1 mb-1"
					/></i></a
					>
				</div>
				<div class="p-3">
					<a
						href="https://andrewbateman.org/contact"
						target="_blank"
						rel="noopener noreferrer"
						class="btn btn-warning"
						><i class="fas fa-paper-plane pr-2"></i>Contact</a
					>
				</div>
				<div class="p-3">
					<a
						href="https://andrewbateman.org"
						target="_blank"
						rel="noopener noreferrer"
						class="btn btn-success"
						><i class="fas fa-user-circle pr-2"></i>My Site</a
					>
				</div>
			</div>
		</div>
	</div>
</body>

<%- include ("partials/footer") %>
