<%- include ("partials/header", {title: "Contact"}) %>
<body>
	<%- include('partials/navbar', {page_name: "contact"}) %>

	<div class="container pt-3">
		<div
			class="card rounded float-center"
			style="max-width: 500px; margin: auto auto"
		>
			<div class="card-header bg-light p-3">
				<img
					class="header-image float-left"
					style="width: 60px; height: 60px; background-size: cover"
					src="<%= user.avatar_url %>"
					alt="Github user profile photo"
				/>
				<h5 class="card-title mb-0" style="color: #0d47a1">
					<img
						src="/images/person-24px.svg"
						alt="date article was created"
						class="ml-2 mr-1 my-1"
					/><%= user.name %>
				</h5>
				<p class="indent-text mb-0" style="color: #0d47a1">
					<img
						src="/images/explore-24px.svg"
						alt="date article was created"
						class="ml-2 mr-1 my-1"
					/><%= user.location %>
				</p>
			</div>
			<div class="card-body p-3">
				<p class="pb-0" style="font-weight: bold">
					<img
						src="/images/description-24px.svg"
						alt="date article was created"
						class="mr-1 mb-1"
					/>Bio:<span
						class="font-italic pr-2"
						style="color: #0d47a1; font-weight: lighter"
						><%= user.bio %></span
					>
				</p>
				<p class="mb-0" style="font-weight: bold">
					<img
						src="/images/github-24px.svg"
						alt="date article was created"
						class="mr-1 mb-1"
					/>Repos:
					<span class="pr-2" style="color: #0d47a1; font-weight: lighter"
						><%= user.public_repos %></span
					>
				</p>
			</div>
			<div class="card-footer d-flex justify-content-around">
				<a
					href="<%= user.html_url %>"
					target="_blank"
					rel="noopener noreferrer"
					class="btn btn-sm btn-outline-dark"
					style="width: 60px"
					><img src="/images/github-24px.svg"
				/></a>
				<a
					href="https://andrewbateman.org/contact"
					target="_blank"
					rel="noopener noreferrer"
					class="btn btn-sm btn-outline-success"
					style="width: 60px"
					><img src="/images/contact-24px.svg"
				/></a>
				<a
					href="https://andrewbateman.org"
					target="_blank"
					rel="noopener noreferrer"
					class="btn btn-sm btn-outline-primary"
					style="width: 60px"
					><img src="/images/face-24px.svg"
				/></a>
			</div>
		</div>
	</div>
</body>

<%- include ("partials/footer") %>
